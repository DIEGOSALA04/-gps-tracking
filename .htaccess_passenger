# Configuración para Passenger (Python App en cPanel)
# Si encuentras "Python App" o "Setup Python App" en cPanel, usa este archivo
# Renombra este archivo a .htaccess y reemplaza el anterior

# Habilitar Passenger
PassengerEnabled On
PassengerAppRoot /home/megamusiccom/sitelcomunicaciones.com
PassengerAppType wsgi
PassengerStartupFile passenger_wsgi.py

# Especificar la versión de Python (ajusta según tu servidor)
# PassengerPython /usr/bin/python3

# Permitir acceso a archivos estáticos directamente
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json)$">
    PassengerEnabled Off
</FilesMatch>

# Deshabilitar listado de directorios
Options -Indexes

